<%= render '/shared/nav' %>


<div class="container-fluid bg-primary py-5">
  <div class="row">
    <%= form_for(@activity_user, url: activity_user_create_path) do |f| %>
      <div class="col-md-8 col-12 offset-md-2">
        <%= f.hidden_field :user_id, value: current_user.id %>
        
        <div class="mb-3">
          <%= f.label "Select an activity", class:'form-label' %>
          <%= f.collection_select :activity_id, Activity.all, :id, :name, {}, { class: 'btn btn-secondary dropdown-toggle w-100', 'data-toggle': 'dropdown' } %>
        </div>
        <div class="mb-3">
        <%= f.label "Duration (minute)", class:'form-label' %>
        <%= f.text_field :duration, class: 'form-control' %>
        </div>

        <div class="mb-3">
        <%= f.label :date, class:'form-label' %>
        <%= f.date_select :date, class: 'form-control' %>
        </div>

        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<%= render '/shared/footer' %>
