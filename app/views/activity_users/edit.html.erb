<%= render '/shared/nav' %>

<div class="container-fluid bg-primary py-5">

   
    <div class="row">
      <div class="col-md-8 col-12 offset-md-2">
        <%= form_for(@activity_user, url: activity_user_update_path(@activity_user),html: {method: :patch}) do |f| %>
        <div class="mb-3">   
          <%= f.label 'Activity Name', class: 'form-label'%> 
          <%= f.collection_select :activity_id, Activity.all, :id, :name, {}, { class: 'btn btn-secondary dropdown-toggle w-100', 'data-toggle': 'dropdown'} %>
        </div>
        <div class="mb-3">
          <%= f.label "Duration (minute)", class:'form-label' %>
          <%= f.text_field :duration, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :date, class:'form-label' %>
          <%= f.date_select :date, class: 'form-control datepicker' %>
        </div>
        <div class="mb-3">
          <%= f.submit "Save Changes", class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>

 

</div>

<%= render 'shared/footer' %>